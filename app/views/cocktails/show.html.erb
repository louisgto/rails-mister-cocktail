<div class="banner flex-column center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo, crop: :fill %>')">
  <div class="flex-column">
    <h1 class="white text-center"><%= @cocktail.name %></h1>
  </div>
  <div class="row">
    <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-secondary"%>
  </div>
</div>

<div class="container d-flex">
  <div class="col-6 sepa">
    <h4>Description</h4>
    <p><%= @cocktail.description %></p>
    <%= link_to "Edit", edit_cocktail_path(@cocktail), class: "btn btn-secondary" %>
  </div>
  <div class="col-6 ml-3">
    <h4>List of ingredients</h4>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= link_to "", dose_path(dose), method: :delete, class: "far fa-trash-alt mr-3" %>
          <%= dose.description %> - <%= dose.ingredient.name %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-secondary"%>
  </div>


  <div class="row justify-content-center">
  </div>
</div>
